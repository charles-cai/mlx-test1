{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MNIST Trainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/model/trainer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Download MNIST",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data/download-mnist.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}